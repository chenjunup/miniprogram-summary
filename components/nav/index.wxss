page {
  width: 100%;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  box-sizing: border-box;
}

.act {
  display: flex;
  align-items: center;
}

.img {
  width: 30rpx;
  height: 30rpx;
}

.title {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}